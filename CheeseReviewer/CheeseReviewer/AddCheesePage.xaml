<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="CheeseReviewer.AddCheesePage">
    <ContentPage.Content>
        <StackLayout VerticalOptions="FillAndExpand"
                     HorizontalOptions="FillAndExpand"
                     Orientation="Vertical"
                     Spacing="15" Padding="20,20,20,20">
            <Label Text="Add Cheese"  VerticalOptions="Center" HorizontalOptions="Center">
                <Label.FontAttributes>
                    Bold
                </Label.FontAttributes>
                <Label.FontSize>
                    25
                </Label.FontSize>
            </Label>

            <Label Text="Rating"></Label>
            <Slider ValueChanged="OnSliderValueChanged" Minimum="0" Maximum="10"/>

            <Label Text="Extra Comments"></Label>
            <Editor TextChanged="EditorTextChanged"/>

        </StackLayout>
    </ContentPage.Content>
</ContentPage>